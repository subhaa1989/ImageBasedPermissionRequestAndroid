<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <!-- Product Name -->
    <LinearLayout android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView android:id="@+id/rest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textSize="16dip"
            android:layout_weight="0.3"
            android:text="Va piano"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
           >
        <RatingBar
            android:id="@+id/rest_rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:max="5"


          />
            </LinearLayout>
        <TextView android:id="@+id/rest_km"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:text="0.2km"
            android:paddingTop="5dp"
            android:layout_gravity="end"
            android:layout_weight="0.3"
            />

    </LinearLayout>
    <TextView android:id="@+id/rest_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="Bahnhofstr.12"/>

</LinearLayout>